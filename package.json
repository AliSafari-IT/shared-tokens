{
  "name": "@asafarim/shared-tokens",
  "description": "A shared design tokens package for use across multiple projects.",
  "author": "Ali Safari <ali@asafarim.com> (https://github.com/AliSafari-IT)",
  "version": "0.5.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliSafari-IT/shared-tokens.git"
  },
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "echo 'No build needed for shared-tokens'",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "demo:preview": "cd demo && npm run preview"
  },
  "files": [
    "index.css",
    "index.js",
    "index.d.ts",
    "tailwind-preset.cjs",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./tailwind-preset.cjs"
    },
    "./index.css": "./index.css",
    "./tailwind-preset": "./tailwind-preset.cjs"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "typescript": "~5.8.3"
  }
}
