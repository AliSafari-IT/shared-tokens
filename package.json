{
  "name": "@asafarim/shared-tokens",
  "description": "A shared design tokens package for use across multiple projects.",
  "author": "Ali Safari <ali@asafarim.com> (https://github.com/AliSafari-IT)",
  "version": "0.8.1",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliSafari-IT/shared-tokens.git"
  },
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
    "style": "index.css",
  "sideEffects": [
    "*.css",
    "styles/**"
  ],
  "scripts": {
    "build": "echo 'No build needed for shared-tokens'",
    "demo": "cd demo && pnpm run dev",
    "demo:build": "cd demo && pnpm run build",
    "demo:preview": "cd demo && pnpm run preview"
  },
 "files": [
    "index.css",
    "base.css",
    "index.js",
    "index.d.ts",
    "tailwind-preset.cjs",
    "styles/",
    "package.json"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.js"
    },
    "./index.css": "./index.css"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "typescript": "~5.8.3"
  },
  "keywords": [
    "asafarim",
    "CSS tokens",
    "shared tokens",
    "design tokens",
    "CSS variables",
    "pure CSS"
  ]
}

